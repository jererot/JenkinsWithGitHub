                @Html.ValidationMessageFor(model => model.cor_alum, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.Label("Telefono", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.tel_alum, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.tel_alum, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.Label("Direccion", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.dir_alum, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.dir_alum, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.cod_dis, "Distrito", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @*@Html.DropDownList("cod_dis", null, "-- Seleccione el distrito --", htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.cod_dis, "", new { @class = "text-danger" })*@
                @Html.DropDownList("DEPARTAMENTO", ViewBag.Deps as SelectList, "Select", htmlAttributes: new { @class = "form-control" })
                @Html.DropDownList("PROVINCIA", ViewBag.Provs as SelectList, "Select", htmlAttributes: new { @class = "form-control" })
                @Html.DropDownList("DISTRITO", ViewBag.Dist as SelectList, "Select", htmlAttributes: new { @class = "form-control" })


            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.cod_paf, "Padre", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @*@Html.DropDownList("cod_paf", null, "-- Seleccione padre --", htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.cod_paf, "", new { @class = "text-danger" })*@

                @Html.TextBox("buscar", ViewData["busqueda"], new { id = "txtBuscar", @class = "form-control" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>

@section Scripts {
<link href="~/Content/jquery-ui-1.10.4.custom.min.css" rel="stylesheet" />
<script src="~/Scripts/jquery-1.10.2.js"></script>
<script src="~/Scripts/jquery-ui-1.10.4.custom.min.js"></script>
@Scripts.Render("~/bundles/jqueryval")
<script type="text/javascript">

    $(document).ready(function () {

        $("#txtBuscar").autocomplete({
            source: '@Url.Action("getPadres", "PadreFamilia")'
        });

        $("#DEPARTAMENTO").change(function () {
            $("#PROVINCIA").empty();
            $.ajax({
                type: 'POST',
                url: '@Url.Action("getProvincias")',
                dataType: 'json',
                data: { id: $("#DEPARTAMENTO").val() },
                success: function (provincias) {
                    $("#PROVINCIA").append('<option value="' + '">Select</option>');
                    $.each(provincias, function (i, provincias) {
                        $("#PROVINCIA").append('<option value="' + provincias.Value + '">' +
                        provincias.Text + '</option>');
                    });
                },
            });


            $("#DISTRITO").empty();
            $("#DISTRITO").append('<option value="' + "" + '">Select</option>');
        });

        $("#PROVINCIA").change(function () {
            $("#DISTRITO").empty();
            $.ajax({
                type: 'POST',
                url: '@Url.Action("getDistritos")',
                dataType: 'json',
                data: { id: $("#PROVINCIA").val() },
                success: function (distritos) {
                    $("#DISTRITO").append('<option value="' + "" + '">Select</option>');
                    $.each(distritos, function (i, distritos) {
                        $("#DISTRITO").append('<option value="' + distritos.Value + '">' +
                        distritos.Text + '</option>');
                    });
                },
            });
        });
    });
</script>

}
