@model CristoRey.Models.DOCENTE

@{
    ViewBag.Title = "Create";
}

<h2>Crear Docente</h2>

@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    @Html.Raw(TempData["msg"])

    <div class="form-horizontal">
        <h4>DOCENTE</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            @Html.LabelFor(model => model.nom_doc, "Nombre", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.nom_doc, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.nom_doc, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.app_doc, "Apellido Paterno", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.app_doc, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.app_doc, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.apm_doc, "Apellido Materno", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.apm_doc, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.apm_doc, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.dni_doc, "DNI", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.dni_doc, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.dni_doc, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.sex_doc, "Sexo", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @{
                    List<SelectListItem> listItems = new List<SelectListItem>();
                    listItems.Add(new SelectListItem
                    {
                        Text = "Masculino",
                        Value = "M"
                    });
                    listItems.Add(new SelectListItem
                    {
                        Text = "Femenino",
                        Value = "F"
                    });
                }
                @Html.DropDownListFor(model => model.sex_doc, listItems, "-- Seleccione su sexo --", new { @class = "btn btn-default dropdown-toggle" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.fna_doc, "Fecha Nacimiento", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.fna_doc, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.fna_doc, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.cor_doc, "Correo", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.cor_doc, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.cor_doc, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.tel_doc, "Telefono", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.tel_doc, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.tel_doc, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.dir_doc, "Direccion", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.dir_doc, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.dir_doc, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.tip_doc, "Tipo Docente", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @{
                    List<SelectListItem> listTipoDoc = new List<SelectListItem>();
                    listTipoDoc.Add(new SelectListItem
                    {
                        Text = "Part Time",
                        Value = "F"
                    });
                    listTipoDoc.Add(new SelectListItem
                    {
                        Text = "Full Time",
                        Value = "P"
                    });
                }
                @Html.DropDownListFor(model => model.tip_doc, listTipoDoc, "-- Tipo Docente --", new { @class = "btn btn-default dropdown-toggle" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.cod_dis, "Distrito", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @*@Html.DropDownList("cod_dis", null, htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.cod_dis, "", new { @class = "text-danger" })*@

                @Html.DropDownList("DEPARTAMENTO", ViewBag.Deps as SelectList, "Select", htmlAttributes: new { @class = "form-control" })
                @Html.DropDownList("PROVINCIA", ViewBag.Provs as SelectList, "Select", htmlAttributes: new { @class = "form-control" })
                @Html.DropDownList("DISTRITO", ViewBag.Dist as SelectList, "Select", htmlAttributes: new { @class = "form-control" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")

    <script type="text/javascript">

    $(document).ready(function () {
        $("#DEPARTAMENTO").change(function () {
            $("#PROVINCIA").empty();
            $.ajax({
                type: 'POST',
                url: '@Url.Action("getProvincias")',
                dataType: 'json',
                data: { id: $("#DEPARTAMENTO").val() },
                success: function (provincias) {
                    $.each(provincias, function (i, provincias) {
                        $("#PROVINCIA").append('<option value="' + provincias.Value + '">' +
                        provincias.Text + '</option>');

                    });
                },
            });
        });

        $("#PROVINCIA").change(function () {
            $("#DISTRITO").empty();
            $.ajax({
                type: 'POST',
                url: '@Url.Action("getDistritos")',
                dataType: 'json',
                data: { id: $("#PROVINCIA").val() },
                success: function (distritos) {
                    $.each(distritos, function (i, distritos) {
                        $("#DISTRITO").append('<option value="' + distritos.Value + '">' +
                        distritos.Text + '</option>');

                    });
                },
            });
        });
    });
    </script>
}