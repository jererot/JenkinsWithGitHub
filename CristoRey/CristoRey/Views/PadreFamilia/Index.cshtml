@model IEnumerable<CristoRey.Models.PADRE_FAMILIA>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

    @using (Html.BeginForm())
    {
        @Html.Raw(TempData["msg"])
        <p>
            <b>Busqueda por DNI:</b>
            @Html.TextBox("buscar", null, new { id = "txtBuscar", @class = "form-control" })
            <br />
            <input type="submit" value="Buscar" />
        </p>
    }
    <br />

    @Html.ActionLink("Create New", "Create")

<table class="table table-striped table-hover table-condensed ">
    <tr>
        <th>
            @Html.DisplayName("Distrito")
        </th>
        <th>
            @Html.DisplayName("Nombre")
        </th>
        <th>
            @Html.DisplayName("DNI")
        </th>
        <th>
            @Html.DisplayName("Fecha Nacimiento")
        </th>
        <th>
            @Html.DisplayName("Sexo")
        </th>
        <th>
            @Html.DisplayName("Correo")
        </th>
        <th>
            @Html.DisplayName("Telefono")
        </th>
        <th>
            @Html.DisplayName("Direccion")
        </th>
        <th>
            @Html.DisplayName("Apoderado")
        </th>
        <th>
            @Html.DisplayName("Telefono Apoderado")
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.DISTRITO.nom_dis)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.nom_paf)
            @Html.DisplayFor(modelItem => item.app_paf)
            @Html.DisplayFor(modelItem => item.apm_paf)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.dni_paf)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.fna_paf)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.sex_paf)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.cor_paf)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.tel_paf)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.dir_paf)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.apo_paf)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.tel_apo)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.cod_paf }) |
            @Html.ActionLink("Details", "Details", new { id=item.cod_paf }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.cod_paf })
        </td>
    </tr>
}

</table>


@section scripts{
    <link href="~/Content/jquery-ui-1.10.4.custom.min.css" rel="stylesheet" />
    <script src="~/Scripts/jquery-1.10.2.js"></script>
    <script src="~/Scripts/jquery-ui-1.10.4.custom.min.js"></script>

    <script>
    $(function () {
        $("#txtBuscar").autocomplete({
            source: '@Url.Action("getPadres", "PadreFamilia")'
        });
    });
    </script>
}